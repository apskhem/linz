  },
  "peerDependencies": {
    "openapi3-ts": "^3.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "html-minifier-terser": "^7.2.0",
    "openapi-types": "^12.1.3",
    "ts-jest": "^29.3.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "oxlint": "^0.16.6",
    "prettier": "^3.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "tests",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
