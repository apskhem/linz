{
  "name": "@apskhem/linz",
  "version": "0.18.2",
  "description": "A web framework with first-class OpenAPI documentation support.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/apskhem/linz.git"
  },
  "keywords": [],
  "author": "Apisit Ritruengroj",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "check": "tsc --noEmit",
    "build": "npx tsup",
    "test": "jest",
    "fmt": "prettier --write './src/**/*.ts'",
    "lint": "npx oxlint src",
    "lint:fix": "npx oxlint src --fix"
  },
  "dependencies": {
    "@routejs/router": "^3.0.3",
    "cors": "^2.8.5",
    "fast-content-type-parse": "^3.0.0",
    "http-status": "~1.7.4",
    "radash": "^12.1.1",
    "zod": "~3.25.56",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.3",
    "html-minifier-terser": "^7.2.0",
    "openapi-types": "^12.1.3",
    "oxlint": "^1.15.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "tests",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
