{
  "name": "@apskhem/linz",
  "version": "0.12.0",
  "description": "A web framework with first-class OpenAPI documentation support.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/apskhem/linz.git"
  },
  "keywords": [],
